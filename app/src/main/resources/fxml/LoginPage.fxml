<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/18.0.2"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="cs.project.presentation.controller.LoginPageController">
    <padding>
        <Insets bottom="40" left="40" right="40" top="40"/>
    </padding>
    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" maxWidth="Infinity" minWidth="100.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="200.0" prefWidth="200.0"/>
        <ColumnConstraints/>
    </columnConstraints>
    <Label text="Login" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowSpan="1">
        <font>
            <Font name="Arial" size="24"/>
        </font>
        <GridPane.margin>
            <Insets bottom="20" left="0" right="0" top="20"/>
        </GridPane.margin>
    </Label>
    <Label text="Username :" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="usernameField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <Label text="Password : " GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <PasswordField fx:id="passwordField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <Button fx:id="submitButton" defaultButton="true" onAction="#login" prefHeight="40" prefWidth="100.0" text="Log In"
            GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="4"
            GridPane.rowSpan="1">
        <GridPane.margin>
            <Insets bottom="20.0" left="50.0" top="20.0"/>
        </GridPane.margin>
    </Button>
    <Button fx:id="signupButton" layoutX="155.0" layoutY="257.0" onAction="#signup" prefHeight="40" prefWidth="100.0"
            text="Sign up" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="4">
        <opaqueInsets>
            <Insets/>
        </opaqueInsets>
        <GridPane.margin>
            <Insets right="150.0"/>
        </GridPane.margin>
    </Button>
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
    </rowConstraints>
</GridPane>
